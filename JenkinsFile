pipeline {
    agent any

    parameters {
        booleanParam(
            name: 'RESET_TALLY',
            defaultValue: false,
            description: 'Tick to clear previous failure-tally.json'
        )
    }

    stages {

        stage('Restore Previous Tally') {
            when {
                expression { return !params.RESET_TALLY }
            }
            steps {
                copyArtifacts(
                    projectName: env.JOB_NAME,
                    selector: lastSuccessful(),
                    filter: 'test-results/failure-tally.json',
                    optional: true
                )
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Run Jest Tests') {
            steps {
                sh 'npm run test:jest || true'
            }
        }

        stage('Run Playwright Tests') {
            steps {
                sh 'npm run test:playwright || true'
            }
        }

        stage('Generate Tally') {
            steps {
                sh 'node tally.js'
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'test-results/failure-tally.json', allowEmptyArchive: true
            publishHTML target: [
                allowMissing: true,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'test-results',
                reportFiles: 'failure-tally.html',
                reportName: 'Failure Tally'
            ]
        }
    }
}