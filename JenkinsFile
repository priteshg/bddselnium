pipeline {
    agent any

    options {
        timestamps()
        disableConcurrentBuilds()
    }

    environment {
        NODE_ENV = "ci"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm run test'
            }
            post {
                always {
                    sh 'echo "Tests completed. Preparing reports..."'
                }
            }
        }
    }

    post {
        always {
            script {

                // ★ Run both publishers in parallel
                parallel(
                    publishHtmlReport: {
                        publishHTML target: [
                            allowMissing: true,
                            alwaysLinkToLastBuild: true,
                            keepAll: true,
                            reportDir: 'reports/html',
                            reportFiles: 'index.html',
                            reportName: 'Project Test Reports'
                        ]
                    },
                    publishPlaywrightReport: {
                        publishHTML target: [
                            allowMissing: true,
                            alwaysLinkToLastBuild: true,
                            keepAll: true,
                            reportDir: 'test-results/playwright-report',
                            reportFiles: 'index.html',
                            reportName: 'Playwright Test Report'
                        ]
                    }
                )
            }
        }

        // Optional: show test exit status
        success {
            echo "Build succeeded"
        }
        failure {
            echo "Build failed — review test output and reports"
        }
    }
}