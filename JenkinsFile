pipeline {
  agent any

  stages {

    stage('Run Jest Tests') {
      steps {
        sh """
          jest --json --outputFile=jest-results.json || true
        """
      }
    }

    stage('Run Playwright Tests') {
      steps {
        sh """
          npx playwright test --reporter=json --output=playwright-report.json || true
        """
      }
    }

    stage('Update Flake Tally') {
      steps {
        sh "node tally.js"
      }
    }

    stage('Publish Reports') {
      steps {
        archiveArtifacts artifacts: 'tally-report.html', onlyIfSuccessful: false

        publishHTML(target: [
          reportDir: '.',
          reportFiles: 'tally-report.html',
          reportName: 'Flaky Test Report',
          keepAll: true
        ])
      }
    }
  }
}